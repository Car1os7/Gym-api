generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Membro {
  id              Int      @id @default(autoincrement())
  nome            String
  email           String   @unique
  telefone        String?
  dataNascimento  DateTime
  planoId         Int
  plano           Plano    @relation(fields: [planoId], references: [id], onDelete: Cascade)
  treinos         Treino[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("membros")
}

model Plano {
  id            Int      @id @default(autoincrement())
  nome          String
  descricao     String?
  preco         Float
  duracaoDias   Int
  membros       Membro[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("planos")
}

model Treino {
  id          Int      @id @default(autoincrement())
  nome        String
  descricao   String?
  duracao     Int
  dificuldade String
  membroId    Int
  membro      Membro   @relation(fields: [membroId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("treinos")
}
